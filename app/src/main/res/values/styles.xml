<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>
        <item name="preferenceTheme">@style/SettingPreferenceStyle</item>
    </style>

    <style name="AppTheme.Place">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SettingPreferenceStyle" parent="PreferenceThemeOverlay">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CommonText" parent="TextAppearance.AppCompat">
        <item name="android:typeface">sans</item>
    </style>

    <style name="CommonText.Large">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="CommonText.Small">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="CommonText.Tiny">
        <item name="android:textSize">8dp</item>
    </style>

    <style name="CommonText.Medium">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="CollpaseCollapsingToolbar" parent="CommonText.Medium">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ExpendCollapsingToolbar" parent="CommonText.Large">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>

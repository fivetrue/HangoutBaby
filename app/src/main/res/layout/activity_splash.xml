<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/layout_login_buttons"
        android:transitionName="@string/app_name"/>


    <Button
        android:id="@+id/btn_splash_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_splash_title"
        android:layout_centerHorizontal="true"
        android:text="@string/login"
        android:textSize="16dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:transitionName="@string/login"
        android:background="@drawable/default_button_background"
        android:textColor="@color/colorPrimary"
        android:layout_margin="30dp"/>


</RelativeLayout>
